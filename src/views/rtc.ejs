<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BaatCheet</title>
    <script src="/socket.io/socket.io.js"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js"></script> -->
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />
  </head>

  <body>
    <main>
      <section id="room-name-wrapper" class="d-flex justify-content-between">
        <img src="/images/add-video.png" id="logo-invideo" alt="Video Chat" />
        <p>
          <b><span id="room-name"></span></b>
        </p>
      </section>

      <section id="video-chat">
        <section id="video-main">
          <section id="video-streams" class="shadow-sm">
            <div class="video-container" id="user-container">
              <div class="username-wrapper">
                <span class="user-name" id="username"></span>
              </div>
              <div class="video-player" id="usery">
                <video
                  id="user-video"
                  muted
                  style="
                    width: 100%;
                    height: 100%;
                    position: absolute;
                    left: 0px;
                    top: 0px;
                    transform: rotateY(180deg);
                    object-fit: cover;
                  "
                ></video>
              </div>
            </div>
            <div
              class="video-container"
              id="user-container1"
              style="display: none"
            >
              <div class="username-wrapper">
                <span class="user-name" id="peername"></span>
              </div>
              <div class="video-player" id="usery">
                <video
                  id="peer-video"
                  style="
                    width: 100%;
                    height: 100%;
                    position: absolute;
                    left: 0px;
                    top: 0px;
                    transform: rotateY(180deg);
                    object-fit: cover;
                  "
                ></video>
              </div>
            </div>
          </section>
          <section id="controls-wrapper">
            <div class="icon-wrapper">
              <img
                src="/images/mic.png"
                alt=""
                id="mic-btn"
                class="control-icon"
              />
            </div>

            <div class="icon-wrapper">
              <img
                src="/images/cam.png"
                alt=""
                id="cam-btn"
                class="control-icon"
              />
            </div>

            <div class="icon-wrapper">
              <img
                src="/images/leave.png"
                alt=""
                id="leave-btn"
                class="control-icon"
              />
            </div>
          </section>
        </section>
        <section id="video-main-2" style="display: none">
          <div id="app">
            <h1 class="center">Chat app</h1>

            <!-- Chat messages will be appended inside this container -->
            <div id="chatContainer"></div>

            <!-- Form to enter and submit new chat messages -->
            <div class="center">
              <form id="messageForm">
                <input class="input center" type="text" id="messageInput" />
                <button class="btn" type="submit" id="sendBtn">Send!</button>
              </form>
            </div>
          </div>
        </section>
      </section>
    </main>
  </body>
  <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
  <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
  <script src="/app.js"></script>
</html>
